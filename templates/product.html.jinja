<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cat Central</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    {% include "components/navbar.html.jinja"%}
    <div class="row justify-content-evenly mt-5">
        <div class="col-4">
            <img src="{{product['image_dir']}}" class="card-img-top" alt="{{product['product_name']}}">
            <p class="fs-3 text-center mt-3">${{product["price"]}}</p>
        </div>
        <div class="col-4">
            <h1>{{product["product_name"]}}</h1>
            <p>{{product["description"]}}</p>

            <form method="post" action="/product/{{product['id']}}/cart">
                <div class="mb-3 ">
                    <label for="qty" class="form-label">Qty</label>
                    <input type="number" name="qty" class="form-control" id="qty" value="1">
                </div>
                    <button type="submit" class="btn btn-light">Add to cart</button>
            </form>
            </div>
        </div>
    </div>
        <hr class="mb-5">
            <div class="row justify-content-evenly">
                <div class="col-4">
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Rating</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                </div>
                <div class="col-4">
                    <label for="reviewinput" class="form-label">Review</label>
                    <input type="text" name="review" class="form-control" id="review">
                    <button type="submit" class="btn btn-light mt-3">Add Review</button>
                </div>
            </div>
            

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
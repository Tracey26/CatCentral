<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cat Central</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    {% include "components/navbar.html.jinja"%}
    <div class="col-12 container">
        <div class="col-5">
            <h1>{{product["name"]}}</h1>
            <p>{{product["description"]}}</p>
        </div>
        <div class="col-3 bg-secondary-subtle rounded p-2">
            <img src="{{product['image_dir']}}" class="card-img-top" alt="{{product['product_name']}}">
            <p class="fs-3 text-center p-3">${{product["price"]}}</p>
            <div class="mb-3">
                <label for="input1" class="form-label">Qty</label>
                <input type="number" class="form-control" id="qty" value="1">
            </div>
            <form method="post" action="/product/{{product['product_id']}}/cart">
                <button type="button" class="btn btn-light">Add to cart</button>
            </form>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
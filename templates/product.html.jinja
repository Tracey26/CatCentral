        <img src="{{product['image']}}" class = "img-fluid">
    </div>
    <div class="col-5">
        <h1>{{product["name"]}}</h1>
        <p>{{product["description"]}}</p>
    </div>
    <div class = "col-3 bg-secondary-subtle rounded">

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cat Central</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    {% include "components/navbar.html.jinja"%}
    <h1 class="text-center">Sign Up</h1>

    {%for message in get_flashed_messages()%}
        <div class="alert alert-info" role="alert">
            {{ message }}
        </div>
    {%endfor%}

<div class="container-fluid mt-5 col-10">
    <form action="/signup" method="post">

        <div class="mb-3">
            <input name="first_name" type="text" aria-label="First name" placeholder="First Name" class="form-control" required value="{{ request.form.get('first_name','')}}">
            <input name="last_name" type="text" aria-label="Last name" placeholder="Last Name" class="form-control" required value="{{ request.form.get('last_name','')}}">
        </div>
        <div class="mb-3">
            <label for="username1" class="form-label">Username</label>
            <input name="username" type="text" aria-label="Username" class="form-control" required value="{{ request.form.get('username','')}}">
        </div>
        <div class="mb-3">
            <label for="Password1" class="form-label">Password</label>
            <input name="password" type="password" class="form-control" id="Password1" required>
        </div>
        <div class="mb-3">
            <label for="confirm_password" class="form-label">Confirm Password</label>
            <input name="confirm_password" type="password" class="form-control" id="confirm_password">
        </div>
        <div class="mb-3">
            <label for="Email1" class="form-label">Email address</label>
            <input name="email" type="email" class="form-control" id="Email1" required value="{{ request.form.get('email','')}}">
        </div>
        <div class="mb-3">
            <label for="address1" class="form-label">Address</label>
            <input name="address" type="text" class="form-control" id="address1" required value="{{ request.form.get('address','')}}">
        </div>
        <div class="mb-3">
            <label for="number1" class="form-label">Number</label>
            <input name="number" type="text" class="form-control" id="number1" required value="{{ request.form.get('number','')}}">
        </div>
    
        <div class="text-center mt-5">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
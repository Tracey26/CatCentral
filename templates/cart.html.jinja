<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cat Central</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    {% include "components/navbar.html.jinja"%}
    <h1 class="text-center p-3">Cart</h1>
    {%if products|length == 0 %}
      <h3>Add items to your cart!</h3>
    {% else %}
<div class=" container col-8 table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Total</th>
            <th scope="col">Qty</th>
            
            </tr>
        </thead>
        <tbody>

            {% for product in products %}
            <tr>
                <th scope="row">{{product['id']}}</th>
                <td>{{product['product_name']}}</td>
                <td>${{"%.2f" |format(product['price'])}}</td>
                <td>$ {{"%.2f" |format(product['price'] * product['qty'])}}</td>
                <td>{{product['qty']}}</td>
                


                <td>
                  <form id = "updateForm{{product['id']}}" action="/cart/{{product['id']}}/update" method = "post">
                    <input 
                      type="number"
                      class="form-control"
                      style="width: 80px"
                      value = "{{product['qty']}}"
                      min="1"
                      name="qty"
                      >
                  </form>
                </td>

                
                <td class="text-center">

                  <button form = "updateForm{{product['id']}}" type="submit" clas="btn btn-primary btn-sm">
                  </button>

                <form action="/cart/{{product['id']}}/del">
                  <td><button form= "updateForm{{product['id']}}" type="submit" class="btn btn-danger">Remove</button></td>
                </form>
            </tr>
            </td>

            {% endfor %}
    </table>
</div>
{% endif %}

<h1>{{total}}</h1>

   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel = "stylesheet" href="/static/styles.css">
  </head>
  <body>
    {% include "components/navbar.html.jinja"%}
    <h1>Checkout!!</h1>
     <div class="row justify-content-evenly">
    <div class="col-4">
      <h1>{{product["product_name"]}}</h1>
        <img src="{{product['image_dir']}}" class="card-img-top" alt="{{product['product_name']}}">
          <p class="fs-3 text-center mt-3">${{product["price"]}}</p>
    </div>
    <div class="col-4">
      <div class="mb-3">
            <label for="address1" class="form-label">Address</label>
            <input name="address" type="text" class="form-control" id="address1" required value="{{ request.form.get('address','')}}">
        </div>
      <p>Contact Info:</p>
        <div class="mb-3">
          <label for="number1" class="form-label">Number</label>
          <input name="number" type="text" class="form-control" id="number1" required value="{{ request.form.get('number','')}}">
        </div>
         <div class="mb-3">
            <label for="Email1" class="form-label">Email address</label>
            <input name="email" type="email" class="form-control" id="Email1" required value="{{ request.form.get('email','')}}">
        </div>
    </div>
  </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>